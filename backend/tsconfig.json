{
  "compilerOptions": {
    /* =========================
       ✅ File & Build Output
    ========================= */
    "rootDir": "./src",
    "outDir": "./dist",

    /* =========================
       ✅ Module & Environment
    ========================= */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ESNext"],
    "types": ["node"],

    /* =========================
       ✅ Emit & Debug
    ========================= */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* =========================
       ✅ Type Safety
    ========================= */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* =========================
       ✅ Style & Clean Code
    ========================= */
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* =========================
       ✅ Modern Module Behavior
    ========================= */
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    /* =========================
       ✅ JSX (if you add frontend later)
    ========================= */
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
